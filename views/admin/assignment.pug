extend _admintemplate.pug

block title 
	| Atribuição

block menu
	include _menu.pug
	+menu('Atribuição')

block page 
	.ui.basic.segment
		h1.ui.header Atribuição
		include subject/_form.pug
		
	.ui.basic.segment
		h1.ui.header Listagem
		include subject/_table.pug

append scripts
	script(src="/static/lib/semantic/components/dimmer.min.js")
	script(src="/static/lib/semantic/components/transition.min.js")
	script(src="/static/lib/semantic/components/modal.min.js")
	script.
		$(document).ready(() => {
			let isEditando = false

			$("a.delete").click(function() {
				const id = $(this).data('id')
				const $modal = $("#deletar")
				$modal.modal({
					onApprove: () => {
						$modal.addClass('loading')
						$.ajax({
							url: '/admin/subject/' + id + '?_method=DELETE',
							method: 'DELETE'
						}).done((data) => {
							window.location.reload()
						}).fail((err) => {
							window.location.reload()
						})
					}
				}).modal('show')
			})
		})