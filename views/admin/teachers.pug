extend _admintemplate.pug

block title 
	if teacher
		| Editando professor
	else
		| Professores

block menu
	include _menu.pug
	+menu(pageUrl)

block modals
	#deletar.ui.tiny.modal
		.header Tem certeza de que quer apagra este registro?
		.actions 
			.ui.cancel.green.button NÃ£o TT_TT
			.ui.approve.red.button Sim 

block page 
	.ui.eleven.wide.column
		.ui.basic.segment
			h1.ui.header Professor
			include _teacherform.pug
			
		.ui.basic.segment
			h1.ui.header Titulo
			include _teachertable.pug

append scripts
	script(src="/static/lib/semantic/components/dimmer.min.js")
	script(src="/static/lib/semantic/components/transition.min.js")
	script(src="/static/lib/semantic/components/modal.min.js")
	script.
		$(document).ready(() => {
			let isEditando = false

			$("a.delete").click(function() {
				const id = $(this).data('id')
				const $modal = $("#deletar")
				$modal.modal({
					onApprove: () => {
						$modal.addClass('loading')
						$.ajax({
							url: '/admin/teacher/' + id + '/',
							method: 'DELETE'
						}).done((data) => {
							window.location.reload()
						}).fail((err) => {
							window.location.reload()
						})
					}
				}).modal('show')
			})
		})