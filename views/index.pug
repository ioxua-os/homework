extend _template

append stylesheets
	link(rel="stylesheet", href="sass/landing-page.sass")

block content
	.pusher 
		#wrapper
			.ui.masthead.inverted.center.aligned.segment
				.mastcontent
					div
						img(src="images/hwlogo_dark.png").mastlogo
					.scroll-down
						span.periodical-trigger Entrar
						i.angle.down.icon.periodical-trigger

			#content-wrapper(style="height: 100vh")
				.ui.mastcontent.centered.middle.aligned.grid
					.five.wide.computer.eight.wide.tablet.column
						img.image(src="images/hwlogo_light.png", alt="WikiAcad logotipo").ui.center
						if errors
							for error in errors
								.ui.negative.message
									.header= error.title
									= error.message
						h2.ui.header Acesse sua conta
						.ui.form.attached.segment
							form(method='POST', action='/login')
								.field 
									.ui.left.icon.input
										i.user.icon
										input(type="email", placeholder="Endereço de e-mail", name="email")
								.field 
									.ui.left.icon.input
										i.lock.icon
										input(type="password", placeholder="Senha", name="password", required)
								input(type='submit', value='Entrar').ui.fluid.large.primary.submit.button
						.ui.bottom.attached.message Ainda não tem uma conta? 
							a(href="#") Cadastre-se